<p class="notice"><%= notice %></p>

<h1 class="index-title">一覧</h1>

<div class="container">
  <h2>物件一覧</h2>

  <table class="index-table">
    <thead>
      <tr>
        <th>物件名</th>
        <th>賃料</th>
        <th>住所</th>
        <th>築年数</th>
        <th>備考</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @apartments.each do |apartment| %>
        <tr>
          <td><%= apartment.name %></td>
          <td><%= apartment.rent.to_s(:delimited) %>円</td>
          <td><%= apartment.address %></td>
          <td><%= apartment.year %>年</td>
          <td class="remarks"><%= apartment.remarks %></td>
          <td><%= link_to '詳細', apartment %></td>
          <td><%= link_to '編集', edit_apartment_path(apartment) %></td>
          <td><%= link_to '削除', apartment, method: :delete,
                    data: { confirm: '削除してもよろしいですか？' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to '物件を登録する', new_apartment_path %>
</div><!-- /.container -->